        "weekly": 4,
        "monthly": 12
    },
    "storage": {
        "local": {
            "enabled": true,
            "path": "../backups/",
            "max_size": "1GB"
        },
        "cloud": {
            "enabled": false,
            "provider": "aws_s3",
            "bucket": "",
            "region": "",
            "access_key": "",
            "secret_key": ""
        }
    },
    "compression": true,
    "encryption": false,
    "notifications": {
        "enabled": true,
        "email": "admin@blooddonation.com",
        "on_success": false,
        "on_failure": true
    }
}
